{
  "scripts": {
    "start:frontend": "cd client && npm start",
    "start:backend": "cd server && npm start",
    "start:dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "install:frontend": "cd client && npm i",
    "install:backend": "cd server && npm i",
    "install:dev": "concurrently \"npm run install:frontend\" \"npm run install:backend\""
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.7.0",
    "prettier": "^2.5.1"
  }
}
